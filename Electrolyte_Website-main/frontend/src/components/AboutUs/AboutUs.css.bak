:root {
  --accent-color: #0E17FF;
  --alternate-color: #750de0;
  --dark-bg: #000;
  --light-text: #fff;
  --gray-text: #999;
  --section-padding: 80px 0;
}

.about-us-container {
  width: 100%;
  overflow: hidden;
}

.container {
  max-width: 1300px;
  margin: 0 auto;
  padding: 0 20px;
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* Typography */
.section-title {
  font-family: 'Space Grotesk', sans-serif;
  font-size: 2.8em;
  font-weight: 500;
  color: var(--light-text);
  margin-bottom: 15px;
  text-align: center;
  animation: fadeInUp 0.6s ease;
}

.section-subtitle {
  font-family: 'Plus Jakarta Sans', sans-serif;
  font-size: 1.1em;
  color: var(--gray-text);
  text-align: center;
  margin-bottom: 50px;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
  animation: fadeInUp 0.6s ease 0.1s both;
}

.section-subtitle-strong {
  font-family: 'Plus Jakarta Sans', sans-serif;
  font-size: 1.2em;
  font-weight: 600;
  color: var(--light-text);
  text-align: center;
  margin-bottom: 20px;
  animation: fadeInUp 0.6s ease 0.1s both;
}

/* Responsive */
@media (max-width: 1024px) {
  .section-title {
    font-size: 2.3em;
  }































